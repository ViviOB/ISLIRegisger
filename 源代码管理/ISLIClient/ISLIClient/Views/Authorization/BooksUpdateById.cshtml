
@{
    Layout = null;
}

@model ISLI.Model.Books
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>引导注册页</title>
    <link href="~/resources/css/common.css" rel="stylesheet" />
    <link href="~/resources/css/portal/common.css" type="text/css" rel="stylesheet" />
    <link href="~/resources/css/zh_CN.css" type="text/css" rel="stylesheet" />
    <link href="~/resources/images/favicon.ico" mce_href="~/resources/images/favicon.ico" rel="bookmark" type="image/x-icon" />
    <link href="~/resources/images/favicon.ico" mce_href="~/resources/images/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/resources/images/favicon.ico" mce_href="~/resources/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script src="~/resources/js/jquery.js" type="text/javascript"></script>
    <script src="~/resources/commons/jquery.validate.js" type="text/javascript"></script>
    <script src="~/resources/js/validatePlugin.js" type="text/javascript"></script>
    <script src="~/resources/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/resources/js/message_zh_CN.js"></script>
    <style>

        .detailBox dl dd input[type="checkbox"] {
            margin-right: 0;
        }

        .mr10 {
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <form id="publisherApplyForm">
        @Html.HiddenFor(m => m.Id)
        <div class="container">
            <div class="adminConent passwordReset">
                <div class="regisBox detailBox " id="publis">
                    <h3 class="passP boldp">
                        MPR标志吗申请详情
                    </h3>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            状态：
                        </dt>
                        <dd>
                            @if (Model.ApplyState == 1)
                            {
                                @Html.Label("", "已提交", new { @class = "red" })
                            }
                            else if (Model.ApplyState == 2)
                            {
                                @Html.Label("", "已通过", new { @class = "red" })
                            }
                            else
                            {
                                @Html.Label("", "已拒绝", new { @class = "red" })
                            }
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            提交时间：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.ApplyDate)
                        </dd>
                    </dl>
                    >
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            ISBN：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.ISBN)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            书名：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.BookName)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            书名的汉语拼音：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.EnglishName)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            丛书名：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Series)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            套书名：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.SeriesBooks)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            责任编辑：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Editor)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            产品形式：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.ProductType)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            中图分类法：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.ChineseLibrary)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            语种：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Languages)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            出版日期：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.PublishDate)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>出版者：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Publisher)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            关键字：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.KeyWord)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            出版地：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.PublishPlace)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            著作者：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Writer)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            出版标记：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.PublishMaket)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            <span class="red">*</span>
                            印刷者：
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Printer)
                        </dd>
                    </dl>
                </div>
                <div class="servicesBtn servicesBtnL centerButton" id="show2">
                    <input type="button" name="leave" value="返回" class="btnBackh ml-15" onclick="location.href='/authorization/index'" />
                </div>
            </div>
        </div>
    </form>
    <script>
        $(function () {
            $("input[name='next']").click(function () {
                $("#publis").prop("hidden", "hidden")
                $("#certify").prop("hidden", "")
                $("[class='ml91']").find("li").eq(0).removeClass('selected')
                $("[class='ml91']").find("li").eq(1).addClass('selected')
            })
            $("input[name='last']").click(function () {
                $("#certify").prop("hidden", "hidden")
                $("#publis").prop("hidden", "")
                $("[class='ml91']").find("li").eq(1).removeClass('selected')
                $("[class='ml91']").find("li").eq(0).addClass('selected')
            })
        })
        function radioselect(res) {
            console.log(res.value)
            if (res.value == 1) {
                $("#certify").find("dl").eq(1).find("dt").html('<span class="red">*</span>出版物资质证明')
            }
            else if (res.value == 2) {
                $("#certify").find("dl").eq(1).find("dt").html('<span class="red">*</span>营业执照')
            }
        }
    </script>
</body>
</html>