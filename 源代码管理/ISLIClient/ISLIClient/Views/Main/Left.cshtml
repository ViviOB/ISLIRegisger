
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>人格障碍诊断</title>
    <link href="~/css/public.css" rel="stylesheet" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/public.js"></script>
</head>

<body id="bg">
    <!-- 左边节点 -->
    <div class="container">
        <div class="leftsidebar_box">
            <a href="/main/main" target="main">
                <div class="line">
                    <img class="icon1" src="~/images/coin01.png" />
                    <img class="icon2" src="~/images/coin02.png" />&nbsp;&nbsp;首页
                </div>
            </a>
            @if (ViewBag.LoginInfo.AuthList != null)
            {
                IEnumerable<ISLI.Model.Authority> menuList = ViewBag.LoginInfo.AuthList;
                foreach (var item in menuList.Where(n => n.ParentId == 0))
                {
                    <dl id="menu-product">
                        <dt>
                            @item.AuthName
                            <img class="icon3" src="~/images/coin19.png" />
                            <img class="icon4" src="~/images/coin20.png" />
                        </dt>
                        @foreach (var twoMenu in menuList.Where(n => n.ParentId == item.Id))
                        {
                            <dd>
                                <img class="coin11" src="~/images/coin111.png" />
                                <img class="coin22" src="~/images/coin222.png" />
                                <a href="@twoMenu.AuthUrl" target="main" class="cks">@twoMenu.AuthName</a>
                                <img class="icon5" src="~/images/coin21.png" />

                            </dd>
                        }
                    </dl>
                }
            }
        </div>
    </div>
</body>
</html>

